# GitHub Personal Access Token (PAT) - requires 'notifications' scope
GH_TOKEN=ghp_your_github_token_here

# ntfy.sh authentication token (optional if the topic is public)
NTFY_TOKEN=tk_your_ntfy_token_here

# ntfy.sh server URL including the topic name
NTFY_URL=https://ntfy.sh/your_secret_topic_name

# Sync interval in seconds (default: 1800 = 30 minutes)
SYNC_INTERVAL=1800

# Timezone (e.g., Europe/Budapest)
TZ=Europe/Budapest